<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardMapper">
	
	<select id="selectlistBoard" resultType="boardDTO">
		<!-- select * from bbs -->
		select  rownum, no, title, content, writer from (
		select ROW_NUMBER() over(order by no desc) as rownum, b.*
		from board b) bbs2
		where bbs2.rownum between 10 and 15
		
		<!-- select * from bbs -->
		
	</select>
	
	<select id="selectAll" resultType="boardDTO"  parameterType="pageDTO">
		select rownum, no, title, content, writer from (
		select ROW_NUMBER() over(order by no desc) as rownum, b.*
		from board b) bbs2
		where bbs2.rownum between ${start} and ${end}

	
<!-- 		mysql 5.5
			select 
				@row_number:=@row_number+1 as rownum, b.*
			from
				(select @row_number:=0) as r, bbs b
				order by id desc
				limit 10 offset ${start} 
-->
	</select>

	<select id="selectlistBoard2" resultType="boardDTO" parameterType="pageDTO">
		select  rownum, no, title, content, writer
		from (
		select ROW_NUMBER() over(order by no desc) as rownum, b.*
		from board b) bbs2
		where bbs2.rownum between #{start} and #{end}
	</select>

	<select id="selectCount" resultType="Integer">
		select count(*) count from board
	</select>
</mapper>
